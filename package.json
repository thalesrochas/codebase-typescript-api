{
  "name": "codebase-typescript-api",
  "version": "1.0.0",
  "description": "Codebase for APIs using NodeJS with Typescript",
  "main": "index.js",
  "scripts": {
    "start:dev": "ts-node-dev -r dotenv/config --files src/index.ts | pino-pretty -c -t \"SYS:yyyy-mm-dd HH:MM:ss.l\"",
    "test": "npm run lint && npm run style:check && npm run test:unit && npm run test:functional",
    "test:unit": "jest --verbose",
    "test:functional": "jest --projects ./test --runInBand",
    "test:functional-coverage": "jest --coverage --projects ./test --runInBand",
    "test:functional-watch": "jest --watch --verbose --projects ./test --runInBand",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "style:check": "prettier --check src/**/*.ts test/**/*.ts",
    "style:fix": "prettier --write src/**/*.ts test/**/*.ts",
    "build": "tsc",
    "start": "node dist/src/index.js",
    "husky:prepare": "husky install"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "api"
  ],
  "author": "Thales Rocha",
  "license": "ISC",
  "dependencies": {
    "@overnightjs/core": "^1.7.6",
    "axios": "^0.21.4",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-openapi-validator": "^4.13.1",
    "express-pino-logger": "^6.0.0",
    "express-rate-limit": "^5.4.1",
    "http-status-codes": "^2.1.4",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mongoose": "^6.0.7",
    "mongoose-unique-validator": "^3.0.0",
    "pino": "^7.8.1",
    "pino-mongodb": "^3.1.1",
    "swagger-ui-express": "^4.1.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-pino-logger": "^4.0.2",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/lodash": "^4.14.175",
    "@types/module-alias": "^2.0.1",
    "@types/mongoose-unique-validator": "^1.0.5",
    "@types/node": "^16.9.2",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^1.1.5",
    "husky": "^7.0.2",
    "jest": "^27.2.2",
    "nock": "^13.1.3",
    "pino-pretty": "^7.5.3",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.3"
  }
}
